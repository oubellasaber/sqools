    <div class="row">
        <div class="col-md-12">
            <!-- Dashboard Content -->
            <div class="card bg-dark">
                <div class="overlay-img">
                    <img src="../assets/img/bg/shape-04.png" alt="img" class="img-fluid shape-01">
                    <img src="../assets/img/bg/shape-01.png" alt="img" class="img-fluid shape-02">
