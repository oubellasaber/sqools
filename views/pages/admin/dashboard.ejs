    <div class="row">

        <!-- Total Students -->
        <div class="col-xxl-3 col-sm-6 d-flex">
            <div class="card flex-fill animate-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-xl bg-danger-transparent me-2 p-1">
                            <img src="../assets/img/icons/student.svg" alt="img">
                        </div>
                        <div class="overflow-hidden flex-fill">
                            <div class="d-flex align-items-center justify-content-between">
                                <h2 class="counter"><%=admin_dashboard.total_students%></h2>
                            </div>
                            <p id="total-students">Total Students</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-top mt-3 pt-3">
                        <p class="mb-0" id="active-students">Active : <span class="text-dark fw-semibold"><%=admin_dashboard.active_students%></span></p>
                        <span class="text-light">|</span>
                        <p id="inactive-students">Inactive : <span class="text-dark fw-semibold"><%=admin_dashboard.inactive_students%></span></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Total Students -->

        <!-- Total Teachers -->
        <div class="col-xxl-3 col-sm-6 d-flex">
            <div class="card flex-fill animate-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
